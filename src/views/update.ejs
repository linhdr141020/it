<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Update User</title>
  </head>
  <body>
    <div class="update-user-container">
      <form action="/update-user" method="POST">
        <div class=""><strong> Create a new user: </strong></div>
        <div class="">
          <label for="">FirstName</label>
          <input type="text" name="firstName" value="<%= dataUser.firstName %>" />
        </div>
        <div class="">
          <label for="">LastName</label>
          <input type="text" name="lastName" value="<%= dataUser.lastName %>"/>
        </div>
        <div class="">
          <label for="">Email</label>
          <input type="email" name="email" value="<%= dataUser.email %>" />
        </div>
        <div class="">
          <label for="">Address</label>
          <input type="text" name="address" value="<%= dataUser.address %>" />
        </div>
        <input type="text" value="<%= dataUser.id %>" hidden name="id">
        <div class="">
          <button type="submit" class="btn-submit">Submit</button>
        </div>
      </form>
    </div>
  </body>
</html>
