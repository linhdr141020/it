<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Nodejs Basic</title>
  </head>
  <body>
    <div class="topnav">
      <a class="active" href="#home">Home</a>
      <a href="#news">News</a>
      <a href="#contact">Contact</a>
      <a href="#about">About</a>
    </div>

    <div class="">
      <div class="w3-container">
        <h2>List users</h2>

        <table class="w3-table-all w3-hoverable">
          <thead>
            <tr class="w3-light-grey">
              <th>ID</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i=0; i < dataUser.length; i++) { %>
            <tr>
              <td><%= dataUser[i].id %></td>
              <td><%= dataUser[i].firstName %></td>
              <td><%= dataUser[i].lastName %></td>
              <td>
                <a href="/detail/user/<%=dataUser[i].id%>">Detail</a>
                <form action="/edit-user/<%=dataUser[i].id%>" method="GET">
                    <button type="submit">Edit</button>
                </form>
                <form action="/delete-user" method="POST">
                    <input type="text" hidden value="<%=dataUser[i].id%>" name="userId">
                    <button type="submit">Delete1</button>
                </form>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="create-user-container">
      <form action="/create-new-user" method="POST">
        <div class=""><strong> Create a new user: </strong></div>
        <div class="">
          <label for="">FirstName</label>
          <input type="text" name="firstName"/>
        </div>
        <div class="">
          <label for="">LastName</label>
          <input type="text" name="lastName"/>
        </div>
        <div class="">
          <label for="">Email</label>
          <input type="email" name="email"/>
        </div>
        <div class="">
          <label for="">Address</label>
          <input type="text" name="address"/>
        </div>
        <div class="">
          <button type="submit" class="btn-submit">Submit</button>
        </div>
      </form>
    </div>
  </body>
</html>
